{
    "compilerOptions": {
      "jsx": "react",
      "allowJs": true,
      "noEmit": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": true,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": true
    },
    "include": ["src"]
  }